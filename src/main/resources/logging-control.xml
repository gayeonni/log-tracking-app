<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Spring Boot 기본 콘솔 로그 출력을 그대로 유지 -->
    <springProfile name="default">
        <include resource="org/springframework/boot/logging/logback/base.xml"/>
    </springProfile>

    <!-- 파일에 로그를 기록 (Rolling) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/home/ubuntu/log-tracking-app/build/custom-libs/logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/home/ubuntu/log-tracking-app/build/custom-libs/logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- LogController 에 대한 커스텀 파일 로그 기록 -->
    <appender name="LOGCONTROLLER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/home/ubuntu/log-tracking-app/build/custom-libs/logs/logcontroller.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/home/ubuntu/log-tracking-app/build/custom-libs/logs/logcontroller.%d{yyyy-MM-dd_HH-mm}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <!-- Spring 기본 로거 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- LogController 클래스에 대한 로거 -->
    <logger level="INFO"
            name="ac.su.kdt.loggingcontrol.controller.LogController"
            additivity="false">
        <appender-ref ref="LOGCONTROLLER" />
    </logger>

</configuration>
